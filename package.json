{
  "name": "lumastic-ui",
  "version": "1.0.1",
  "description": "The UI framework for lumastic applications and extensions",
  "repository": "https://github.com/lumastic/lumastic-ui",
  "scripts": {
    "start": "npx styleguidist server",
    "new": "cd scripts && ./createComponent.sh",
    "new:template": "cd scripts && ./createTemplate.sh",
    "new:view": "cd scripts && ./createView.sh",
    "new:layout": "cd scripts && ./createLayout.sh",
    "new:form": "cd scripts && ./createForm.sh",
    "new:icon": "cd scripts && ./createIcon.sh",
    "index": "cd scripts && ./index.sh",
    "build": "npx webpack",
    "build:prod": "npx webpack --config webpack.prod.js && yarn cp:package",
    "test": "jest --watch",
    "cp:package": "cp package.json dist/",
    "yalc": "yarn build:prod && cd dist && yalc push",
    "dist": "yarn build:prod && cd dist && yarn publish"
  },
  "keywords": [],
  "author": "Headfake Digital, LLC",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@svgr/cli": "^5.3.0",
    "@svgr/webpack": "^5.3.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "autoprefixer": "^9.7.4",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "emojibase": "^4.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "postcss-autoreset": "^2.0.2",
    "postcss-initial": "^3.0.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-styleguidist": "^11.0.1",
    "react-test-renderer": "^16.13.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "svg-sprite-loader": "^4.2.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
